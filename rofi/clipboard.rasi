@import "/home/jack/.config/rofi/colors-catppuccin-mocha.rasi"

configuration {
    show-icons: false;
    disable-history: true;
    font: "Monaco 11";
}

window {
    location: north;
    anchor: north;
    width: 720;
    border: 2px;
    border-color: @border;
    background-color: @bg;
    padding: 12px;
    children: [mainbox];
}

mainbox {
    orientation: vertical;
    spacing: 8px;
}

inputbar {
    children: [prompt, entry];
    padding: 8px 10px;
    border-radius: @radius;
    background-color: @surface;
    border: 1;
    border-color: @border;
}

prompt {
    text: " ";
    expand: false;
    color: @accent;
}

entry {
    placeholder: "Search clipboardâ€¦";
}

listview {
    columns: 1;
    lines: 12;
    spacing: 6px;
}

element {
    padding: 8px 10px;
    border-radius: @radius;
}

element selected {
    background-color: @accent;
    border: 1;
    border-color: @accent;
}
